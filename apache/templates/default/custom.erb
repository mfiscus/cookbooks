<% if @port != 80 -%>
Listen <%= @port %>
<% end -%>

<VirtualHost *:<%= @port %>>
  ServerAdmin fuck@you

  DocumentRoot <%= @document_root %>
  <Directory />
    Require all granted
  </Directory>
  <Directory <%= @document_root %>>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>
